    <children>
        <ImageView fitHeight="473.0" fitWidth="664.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../img/plant.png" />
            </image></ImageView>
        <Label layoutX="130.0" layoutY="199.0" text="Username">
            <font>
                <Font name="Comic Sans MS Bold" size="14.0" />
            </font>
        </Label>
        <Label layoutX="130.0" layoutY="240.0" prefHeight="18.0" prefWidth="66.0" text="Password">
            <font>
                <Font name="Comic Sans MS Bold" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="usernameField" layoutX="215.0" layoutY="197.0" prefHeight="26.0" prefWidth="129.0" promptText="Username" />
